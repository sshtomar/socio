# Coding Agent Service Environment Configuration
# Copy this file to services/coding-agent/.env and fill in your values

# =============================================================================
# Anthropic API Configuration
# =============================================================================
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-...

# Model selection
# - DEFAULT_MODEL: Used for code generation and analysis (Sonnet 4 recommended)
# - ROUTER_MODEL: Used for fast query classification (Haiku recommended)
DEFAULT_MODEL=claude-sonnet-4-20250514
ROUTER_MODEL=claude-3-5-haiku-20241022

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
LOG_LEVEL=INFO

# =============================================================================
# Integration URLs
# =============================================================================
# Session Orchestrator: Manages notebook runtime execution
SESSION_ORCHESTRATOR_URL=http://localhost:8002

# Workspace API: Project metadata and storage
WORKSPACE_API_URL=http://localhost:8001

# =============================================================================
# Feature Flags
# =============================================================================
# Enable self-critique for higher quality (Phase 3 feature)
# Warning: Increases token usage 2x for complex queries
ENABLE_SELF_CRITIQUE=false

# Maximum tokens allowed per request
MAX_TOKENS_PER_REQUEST=8000

# Track and log token usage statistics
ENABLE_USAGE_TRACKING=true

# =============================================================================
# Performance & Limits
# =============================================================================
# Timeout for agent execution (seconds)
AGENT_TIMEOUT_SECONDS=120

# Timeout for individual tool calls (seconds)
TOOL_TIMEOUT_SECONDS=30

# =============================================================================
# Cost Management
# =============================================================================
# Optional: Set budget alerts
# DAILY_TOKEN_BUDGET=1000000
# ALERT_EMAIL=admin@example.com
